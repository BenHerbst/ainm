<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="406.0" prefWidth="632.0" stylesheets="@../../../styles/main.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.idaesbasic.controllers.calendar.CalendarController">
   <children>
      <ButtonBar buttonOrder="U" prefHeight="40.0" prefWidth="200.0">
        <buttons>
            <ToggleButton fx:id="switchToDayButton" mnemonicParsing="false" onAction="#switchToDay" selected="true" text="Day" />
            <ToggleButton fx:id="switchToWeekButton" layoutX="553.0" layoutY="18.0" mnemonicParsing="false" onAction="#switchToWeek" text="Week" />
            <ToggleButton fx:id="switchToMonthButton" layoutX="553.0" layoutY="18.0" mnemonicParsing="false" onAction="#switchToMonth" text="Month" />
            <ToggleButton fx:id="switchToYearButton" layoutX="553.0" layoutY="18.0" mnemonicParsing="false" onAction="#switchToYear" text="Year" />
        </buttons>
      </ButtonBar>
      <AnchorPane fx:id="viewContainer" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
   </children>
</VBox>
